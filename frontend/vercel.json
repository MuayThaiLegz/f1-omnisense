{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/:path(.*)", "destination": "https://f1-backend-XXXXX-uc.a.run.app/:path" },
    { "source": "/3d-models/:path(.*)", "destination": "https://f1-backend-XXXXX-uc.a.run.app/3d-models/:path" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/circuits/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    }
  ]
}
